{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "C++ Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/../bin/Microsoft.R.Host.out",
            "args": ["--rhost-name \"REPL\"", "--rhost-interactive", "--rhost-suppress-ui"],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/../bin",
            "environment": [{"name":"LD_LIBRARY_PATH", "value":"/usr/lib/R/lib"},
                            {"name":"R_HOME", "value":"/usr/lib/R"},
                            {"name":"R_USER_HOME", "value":"~"}],
            "externalConsole": true,
            "sourceFileMap" : {"/build/r-base-wduYC7/r-base-3.2.3":"/home/kanadig/GIT/R-3.2.3"},
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
        },
        {
            "name": "C++ Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceRoot}/../bin/Microsoft.R.Host.out",
            "processId": "${command:pickProcess}",
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
        }
    ]
}